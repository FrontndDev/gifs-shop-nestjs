// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id        String   @id @default(cuid())
  title     String
  price     Float
  video     String   // путь к gif/видео файлу
  badge     String?  // опциональный бейдж (Хит продаж, Новинка, etc.)
  showcase      String?
  profileColor  String?
  theme         String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("products")
}

model Order {
  id              String   @id @default(cuid())
  name            String   // Ваше имя
  telegramDiscord String   // Telegram/Discord (username)
  steamProfile    String   // Ссылка на профиль Steam
  style           String   // Стиль оформления
  colorTheme      String   // Цветовая гамма
  details         String   // Детали оформления
  status          String   @default("pending") // статус заказа
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("orders")
}
