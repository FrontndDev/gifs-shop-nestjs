// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("SQLITE_URL")
}

model Product {
  id        String   @id @default(cuid())
  title     String
  titleEn   String?  // английское название (опциональное)
  slug      String?  @unique // URL-friendly идентификатор (опциональный)
  price     Float
  priceUSD  Float?
  video     String   // путь к MP4 видео файлу
  original  String?  // приватная ссылка, доступна только после оплаты
  badge     String?  // опциональный бейдж (Хит продаж, Новинка, etc.)
  showcase      String?
  profileColor  String?
  theme         String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("products")
}

model Order {
  id              String   @id @default(cuid())
  name            String   // Ваше имя
  telegramDiscord String   // Telegram/Discord (username)
  steamProfile    String   // Ссылка на профиль Steam
  style           String   // Стиль оформления
  colorTheme      String   // Цветовая гамма
  details         String   // Детали оформления
  status          String   @default("pending") // статус заказа
  paymentProvider String?  // способ оплаты: 'stripe', 'paypal', 'yookassa', 'free'
  currency        String?  // валюта оплаты: 'USD', 'RUB'
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("orders")
}

model DownloadLink {
  id        String   @id @default(cuid())
  token     String   @unique // уникальный токен для ссылки
  orderId   String   // ID заказа
  productId String   // ID продукта
  filename  String   // имя файла для скачивания
  expiresAt DateTime // время истечения ссылки
  isUsed    Boolean  @default(false) // использована ли ссылка
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("download_links")
}

model Admin {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String   // хешированный пароль
  email     String?  @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}
